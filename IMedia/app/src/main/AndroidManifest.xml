<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="app.studiotft.sid_radio"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:name=".app"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/IMedia">
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="3dbb0c92af986bf6149a6fc776df0b866482626e"/>

        <activity
            android:name=".ui.info.Info"
            android:label="@string/title_activity_info">
        </activity>
        <activity
            android:name=".ui.info.InfoDetail"
            android:label="@string/title_activity_info_detail">
        </activity>
        <activity
            android:name=".ui.setting.Setting"
            android:label="@string/title_activity_settings">
        </activity>
        <activity
            android:name=".ui.EventMapView"
            android:label="@string/title_activity_event_map_view">
        </activity>
    </application>

</manifest>
