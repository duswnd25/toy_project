    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.6"
    tools:context="app.kimyeonjung.sid_radio.ui.info.Info">

    <ListView
        android:id="@+id/activity_info_list_view"
        android:layout_width="match_parent"
