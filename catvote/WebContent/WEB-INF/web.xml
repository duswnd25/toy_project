<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<servlet>
		<servlet-name>index</servlet-name>
		<servlet-class>catvote.main.user.IndexServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>catvote.main.common.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>admin</servlet-name>
		<servlet-class>catvote.main.admin.DashboardServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>auth</servlet-name>
		<servlet-class>catvote.main.common.AuthServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>reward</servlet-name>
		<servlet-class>catvote.main.user.RewardServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>timeline</servlet-name>
		<servlet-class>catvote.main.user.TimelineServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>vote</servlet-name>
		<servlet-class>catvote.main.user.VoteServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>reward_api</servlet-name>
		<servlet-class>catvote.api.RewardApiServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>vote_api</servlet-name>
		<servlet-class>catvote.api.VoteApiServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>admin_api</servlet-name>
		<servlet-class>catvote.api.AdminApiServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>question_api</servlet-name>
		<servlet-class>catvote.api.QuestionApiServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>admin</servlet-name>
		<url-pattern>/admin</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>auth</servlet-name>
		<url-pattern>/auth</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>reward</servlet-name>
		<url-pattern>/reward</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>timeline</servlet-name>
		<url-pattern>/timeline</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>vote</servlet-name>
		<url-pattern>/vote</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>reward_api</servlet-name>
		<url-pattern>/api/reward</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>vote_api</servlet-name>
		<url-pattern>/api/vote</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>admin_api</servlet-name>
		<url-pattern>/api/admin</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>question_api</servlet-name>
		<url-pattern>/api/question</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/public/*</url-pattern>
	</servlet-mapping>

	<error-page>
		<error-code>404</error-code>
		<location>/</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/</location>
	</error-page>

</web-app>
